/**app.wxss**/

page {
  height: 100%;
  background-color: #fff;
  color: #353535;
  font-size: 26rpx;
  text-align: center;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  box-sizing: border-box;
}

/* 浮动 */

.fl {
  float: left;
}

.fr {
  float: right;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

/* 背景色 */

.bg0cc {
  background: #008c96;
}

.bgf44 {
  background: #f44;
}

.bgd2 {
  background: #d2d2d2;
}

/* 字体颜色 */

.cl35 {
  color: #353535;
}

.clb2 {
  color: #b2b2b2;
}

.bgff {
  background: #fff;
}

.cl88 {
  color: #888;
}

.c555 {
  color: #555;
}

.cl0cc {
  color: #008c96;
}

.clb2 {
  color: #b2b2b2;
}

/* 外边距 */

.mt20 {
  margin-top: 20rpx;
}

.mb20 {
  margin-bottom: 20rpx;
}

.ml20 {
  margin-left: 20rpx;
}

.mr20 {
  margin-right: 20rpx;
}

.mr40 {
  margin-right: 40rpx;
}

/* 内边距 */

.pt20 {
  padding-top: 20rpx;
}

.pt25 {
  padding-top: 25rpx;
}

.pb20 {
  padding-bottom: 20rpx;
}

.pb25 {
  padding-bottom: 25rpx;
}

.pl10 {
  padding-left: 20rpx;
}

.pr10 {
  padding-right: 20rpx;
}

/* 边框 */

.bte0 {
  border-top: 1rpx solid #e0e0e0;
}

.bbe0 {
  border-bottom: 1rpx solid #e0e0e0;
}

/* 右箭头 */

.icon-right {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 1px solid #b2b2b2;
  border-right: 1px solid #b2b2b2;
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: rotate(45deg) translate(0, -75%);
}

/* 清除按钮默认样式 */

button::after {
  border: none;
}

button{
  margin: 0;
  padding: 0;
}

.btn{
  margin: 20rpx;
  background-color: #008C96;
  color: #fff;
}

/*短斜杠  */

.div-line {
  display: inline-block;
  width: 2rpx;
  height: 16rpx;
  background: #c9c9c9;
  margin: 0 20rpx;
}

/* 占位图 */

.placeholder-image {
  width: 100%;
  height: 100%;
  background-image: url('http://p7ezyptwz.bkt.clouddn.com/1531365726039placeholder.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

/* 弹性布局 */

.flex-row-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.flex-row-end {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.flex-row-around {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.flex-col-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex-col-start {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

/* 标题 */
.title{
  font-weight: 600;
  color: #008C96;
  font-size: 30rpx;
  margin: 10rpx;
  display: block;
}
