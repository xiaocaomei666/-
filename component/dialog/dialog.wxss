/* components/dialog/dialog.wxss */

.cl35 {
  color: #353535 !important;
}

.dhsq-dialog {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 999;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}

.dhsq-dialog.active {
  display: block;
}

.dialog-body {
  position: absolute;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.dialog-content {
  background: #fff;
  width: 580rpx;
  min-height: 421rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.main {
  position: relative;
  min-height: 287rpx;
  max-height: 800rpx;
  overflow-y: auto;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}

.main .title {
  font-size: 34rpx;
  font-weight: 500;
  color: #2a2a2a;
  padding: 60rpx 90rpx 0 90rpx;
  text-align: center;
}

.main .content {
  padding: 55rpx 66rpx 63rpx 66rpx;
  flex: 1;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main .slot-content {
  padding: 40rpx 60rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.main .content .text {
  color: #2a2a2a;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 1.7;
}

.footer {
  position: relative;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 42rpx;
  margin-bottom: 54rpx;
}

.footer.flex-center {
  justify-content: center;
}

.footer  .btn {
  /* flex: 1; */
  background: #fff;
  width: 228rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 4rpx;
}

.footer .btn + .btn {
}

.btn.cancel {
  color: #2a2a2a;
  border: 1rpx solid #a2a2a2;
}

.btn.submit {
  color: #fff;
  background: #0ec65c;
}

.btn.store {
  color: #fff;
  background: linear-gradient(90deg, rgba(255, 144, 22, 1), rgba(255, 180, 2, 1));
}

.icon-close {
  position: absolute;
  top: -78rpx;
  right: -25rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 动效 */

.anim {
  animation-duration: 0.8s;
  animation-fill-mode: both;
}

.anim.bounceIn {
  animation-duration: 0.5s;
}

.bounceIn {
  animation-name: bounceIn;
}

@keyframes bounceIn {
  from, 50%, to {
    animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
  }

  0% {
    opacity: 0;
    -webkit-transform: translate(-50%, -50%) scale3d(0, 0, 0);
    transform: translate(-50%, -50%) scale3d(0, 0, 0);
  }

  50% {
    -webkit-transform: translate(-50%, -50%) scale3d(1.1, 1.1, 1.1);
    transform: translate(-50%, -50%) scale3d(1.1, 1.1, 1.1);
  }

  100% {
    opacity: 1;
    -webkit-transform: translate(-50%, -50%) scale3d(1, 1, 1);
    transform: translate(-50%, -50%) scale3d(1, 1, 1);
  }
}
