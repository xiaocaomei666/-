/* component/lzq-video/lzq-video.wxss */
.lzq-video {
  position: relative;
  width: 100%;
  height: 100%;
}

.lzq-video-item{
  width: 100%;
  height: 100%;
}
.lzq-video .controls {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 10;
  top: 0;
  left: 0;
}
.lzq-video .controls .play {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 52rpx;
  height: 52rpx;
  transform: translate(-50%, -50%);
  z-index: 12;
}
.lzq-video .controls .poster,
.lzq-video .controls .poster-image{
  width: 100%;
  height: 100%;
}